<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/loader.css">
<%- include('../includes/start.ejs') %>

    <%- include('../includes/navigation.ejs') %>
    <main class="main-entry">
        <section class="panel-center">
            <h2 class="content-header">Enter your URL to analyze the words on your website</h2>
            <form id="formAnalysis" action="/analysis" method="POST">
                <div class="form-entry">
                    <label for="url">Enter your full URL:</label>
                    <input type="text" name="url" id="url">
                </div>
            </form>
            <button id="btnLoad" class="btn">Analyze</button>
            <h2 id="loader" class="loader">Loading<div class="loader-animation"><div></div><div></div><div></div><div></div></div></h2>
        </section>
        <% if (error) { %>
            <section class="panel-center">
                <h2 class="error">An error occurred! Please try another URL</h2>
            </section>
        <% } %>
    </main>

    <script src="/scripts/loader.js"></script>

<%- include('../includes/end.ejs') %>